@model List<ShoppingCart.Models.ViewsModel.Pages.PagesVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Page", "AddPage")
</p>

@if (!Model.Any())
{
<h1 class="text-center">There are no pages</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
               Title
            </th>
            <th>
               Slug
            </th>
            <th>
               SideBar
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HashSideBar)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
                @if (item.Slug != "home")
                {
                    @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new {@class = "delete" })
                }

            </td>
        </tr>
    }

    </table>
}

@section Scripts {
    <script>
        $(function () {
            $("a.delete").click(function() {
                if (!confirm("Confirm page deletion")) return false;
            });
        });
    </script>
    }
